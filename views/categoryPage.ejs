<h1 class="pb-4"><%= currCat.name + " Articles" %></h1>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="/categories/all">Categories</a></li>
        <li class="breadcrumb-item active" aria-current="page"><%= currCat.name %></li>
    </ol>
</nav>


<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3 mb-4">
    <% if(typeof currCat != "undefined" && catArticles.length > 0) { %>
        <% catArticles.forEach(function(article, index) { %>
            <a href="/articles/<%= article._id %>" class="col text-center category__link">
                <div class="category__img shadow">
                    <img src="../uploads/<%= article.image %>" alt="<%= article.title %>" loading="lazy">
                </div>
                <div class="pt-1"><%= article.title %></div>
            </a>
        <% }) %>
    <% } %>
</div>