<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Publish an Article</h1>
    <div class="col-lg-6 mx-auto">
        <p class="lead">Publish your article today to make it reach thousands of people across the world.</p>
    </div>
</div>


<div class="row justify-content-center">

    <% if(infoSubmitObj != "") { %>
        <div class="col-8 alert alert-success" role="alert">
            <%= infoSubmitObj %>
        </div>
    <% } %>

    <% if(infoErrorsObj != "") { %>
        <div class="col-8 alert alert-danger" role="alert">
            <%= infoErrorsObj[0].message %>
        </div>
    <% } %>

    <div class="col-8">
      <form action="/submit/articles/public" enctype="multipart/form-data" method="POST" class="submit-form">
        <div class="row g-3">
  
          <div class="col-12">
            <label for="image" class="form-label">Image</label>
            <input type="file" class="form-control" name="image" accept="image/">
          </div>
  
          <div class="col-12">
            <label for="title" class="form-label">Title</label>
            <textarea class="form-control" name="title" id="title" maxlength="120" cols="30" rows="2" required></textarea>
          </div>
  
          <div class="col-12">
            <label for="categoryID" class="form-label">Category</label>
            <select class="form-select form-control" name="categoryID" id="categoryID" aria-label="Category">
              <% categories.forEach(function(category) { %>
              <option value="<%= category._id %>"><%= category.name %></option>
              <% }); %>
            </select>
          </div>
  
          <div class="col-12">
            <label for="content" class="form-label">Article</label>
            <textarea class="form-control" name="content" id="content" maxlength="10000" cols="30" rows="8" required></textarea>
          </div>
  
          <div class="col-12 text-center">
            <button type="submit" class="btn btn-primary btn-publish">Publish</button>
          </div>
  
        </div>
      </form>
    </div>
  </div>
  
  <style>
  .submit-form {
    background-color: #f8f9fa;
    border: 1px solid #dcdcdc;
    padding: 20px;
    border-radius: 10px;
  }
  
  .submit-form label {
    font-weight: bold;
    margin-bottom: 10px;
  }
  
  .submit-form textarea,
  .submit-form select {
    border-radius: 5px;
    border: 1px solid #dcdcdc;
    padding: 10px;
    resize: vertical;
  }
  
  .submit-form button {
    border-radius: 5px;
    background-color: #339af0;
    color: #fff;
    padding: 10px 20px;
    font-weight: bold;
    transition: background-color 0.3s ease;
  }
  
  .submit-form button:hover {
    background-color: #2170db;
  }
  
  .submit-form .btn-publish {
    width: 100%;
  }
  
  .submit-form .btn-publish:active,
  .submit-form .btn-publish:focus {
    outline: none;
  }
  
  .submit-form .btn-publish:before {
    content: "";
    position: absolute;
    width: 0;
    height: 100%;
    background-color: rgba(255, 255, 255, 0.3);
    top: 0;
    left: 50%;
    z-index: -1;
    transition: width 0.3s ease;
  }
  
  .submit-form .btn-publish:hover:before {
    width: 100%;
    left: 0;
  }
  </style>
  